{
  "primary_exchange": "paradex",
  "secondary_exchange": "lighter",

  "paradex": {
    "name": "Paradex",
    "enabled": true,
    "base_url": "https://api.paradex.trade",
    "ws_url": "wss://ws.api.paradex.trade",
    "chain": "starknet",
    "fees": {
      "maker": 0.0,
      "taker": 0.0
    },
    "leverage": {
      "btc_max": 50,
      "default": 20
    },
    "markets": {
      "btc": "BTC-USD-PERP"
    },
    "credentials": {
      "l1_address": "${PARADEX_L1_ADDRESS}",
      "l2_private_key": "${PARADEX_L2_PRIVATE_KEY}"
    },
    "rate_limits": {
      "requests_per_second": 10,
      "orders_per_second": 5
    },
    "order_types": ["market", "limit", "stop_loss", "take_profit"],
    "min_order_size": 0.001,
    "price_precision": 1,
    "size_precision": 3
  },

  "lighter": {
    "name": "Lighter",
    "enabled": true,
    "base_url": "https://mainnet.zklighter.elliot.ai",
    "api_docs": "https://apidocs.lighter.xyz",
    "chain": "zk-rollup",
    "fees": {
      "maker": 0.0,
      "taker": 0.0,
      "note": "Standard accounts have 0% fees - this is why we switched from Paradex"
    },
    "leverage": {
      "btc_max": 50,
      "eth_max": 50,
      "alts_max": 15,
      "default": 20
    },
    "markets": {
      "btc": "BTC-USD-PERP",
      "eth": "ETH-USD-PERP"
    },
    "credentials": {
      "account_index": "${LIGHTER_ACCOUNT_INDEX}",
      "api_key_index": "${LIGHTER_API_KEY_INDEX}",
      "private_key": "${LIGHTER_PRIVATE_KEY}"
    },
    "rate_limits": {
      "requests_per_second": 5,
      "orders_per_second": 3
    },
    "latency": {
      "standard_ms": "200-300",
      "note": "Acceptable for 1-minute candle strategies"
    },
    "order_types": ["market", "limit", "post_only", "reduce_only", "ioc", "gtt", "stop_loss", "take_profit", "twap"],
    "min_order_size": 0.001,
    "price_precision": 1,
    "size_precision": 4
  },

  "data_sources": {
    "historical": {
      "primary": "binance",
      "fallback": "paradex"
    },
    "binance": {
      "base_url": "https://api.binance.com/api/v3",
      "symbol": "BTCUSDT",
      "rate_limit": 1200
    }
  }
}
